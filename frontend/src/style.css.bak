@tailwind base;
@tailwind components;
@tailwind utilities;

@layer base {
  :root {
    --background: 240 10% 2%;
    --foreground: 0 0% 98%;
    --card: 240 10% 4%;
    --card-foreground: 0 0% 98%;
    --primary: 250 100% 65%;
    --primary-foreground: 0 0% 100%;
    --accent: 250 100% 65%;
    --accent-foreground: 0 0% 100%;
    --radius: 1.5rem;
  }
}

@layer components {
  .glass-premium, .glass-card {
    @apply bg-white/[0.03] backdrop-blur-xl border border-white/10 shadow-[0_8px_32px_0_rgba(0,0,0,0.37)];
  }

  .premium-card {
    @apply relative bg-card/40 backdrop-blur-md border border-white/5 rounded-[2rem] shadow-2xl transition-all duration-500 hover:bg-card/60 hover:border-white/10 overflow-hidden;
  }

  .text-success { @apply text-emerald-400; }
  .text-danger { @apply text-rose-400; }
  .text-info { @apply text-indigo-400; }
  .bg-success\/10 { @apply bg-emerald-500/10; }
  .bg-danger\/10 { @apply bg-rose-500/10; }
  .bg-info\/10 { @apply bg-indigo-500/10; }

  .premium-gradient-text, .glow-text {
    @apply bg-clip-text text-transparent bg-gradient-to-br from-white via-indigo-200 to-indigo-500 animate-gradient-x;
  }

  .mesh-gradient {
    @apply fixed inset-0 -z-10 overflow-hidden pointer-events-none;
    background: radial-gradient(
        circle at 0% 0%,
        rgba(79, 70, 229, 0.15) 0%,
        transparent 40%
      ),
      radial-gradient(
        circle at 100% 100%,
        rgba(139, 92, 246, 0.1) 0%,
        transparent 40%
      ),
      radial-gradient(
        circle at 50% 50%,
        rgba(0, 0, 0, 1) 0%,
        rgba(2, 4, 10, 1) 100%
      );
  }

  .bg-grid-pattern {
    background-image: radial-gradient(
      circle,
      rgba(255, 255, 255, 0.05) 1px,
      transparent 1px
    );
    background-size: 32px 32px;
  }
}

@layer utilities {
  .animate-fade-in {
    animation: fadeIn 0.6s cubic-bezier(0.22, 1, 0.36, 1) forwards;
  }

  .animate-float {
    animation: float 6s ease-in-out infinite;
  }

  .custom-scrollbar::-webkit-scrollbar {
    width: 6px;
  }

  .custom-scrollbar::-webkit-scrollbar-track {
    background: transparent;
  }

  .custom-scrollbar::-webkit-scrollbar-thumb {
    @apply bg-white/10 rounded-full transition-colors hover:bg-white/20;
  }

  .hide-scrollbar::-webkit-scrollbar {
    display: none;
  }
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(10px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes float {
  0% {
    transform: translateY(0px);
  }
  50% {
    transform: translateY(-10px);
  }
  100% {
    transform: translateY(0px);
  }
}

@keyframes gradient-x {
  0% {
    background-position: 0% 50%;
  }
  50% {
    background-position: 100% 50%;
  }
  100% {
    background-position: 0% 50%;
  }
}

body {
  @apply bg-black text-foreground antialiased selection:bg-indigo-500/30;
  margin: 0;
  padding: 0;
}
